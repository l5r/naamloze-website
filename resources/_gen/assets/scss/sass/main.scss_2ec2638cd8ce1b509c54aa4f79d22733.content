body{font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;font-size:1.2rem}@media (min-width: 60ch){body{font-size:1.5rem}}h1,h2,h3,h4,h5,h6{margin-top:2rem;margin-bottom:1rem}footer{font-size:0.9rem}nav{display:grid;grid-template-columns:min-content auto max-content;align-items:end;position:sticky;max-width:100%;width:60rem;min-width:0;top:0;margin:1rem;padding:1rem;border-bottom:1rem solid #000;background:#fff}nav a{font-stretch:2;font-weight:bold;text-decoration:none;color:black}nav .home{grid-column:1/2;font-size:2rem}nav ul.nav{grid-column:3/4}nav li{list-style:none}nav details{position:relative}nav details summary{margin:-.5rem;padding:.5rem}nav details>ul{background-color:white;position:absolute;width:100%;border:.25rem solid #000;padding:.5rem;margin-top:.5rem;left:0}.hero{max-width:60rem;margin:2rem auto;padding:0 1rem;display:flex;flex-flow:column;min-height:10rem}@media (min-width: 10rem){.hero{flex-flow:row;align-items:center;flex-wrap:wrap}}.hero h1,.hero div{flex:1;margin:2rem}@media (min-width: 10rem){.hero h1,.hero div{min-width:25rem}}.hero h1{text-transform:uppercase;font-weight:bold;font-size:4rem;text-align:right}@media (max-width: 10rem){.hero h1{font-size:2rem}}*{margin:0;padding:0;box-sizing:border-box}body{display:flex;flex-flow:column nowrap;justify-content:stretch;place-items:center}main,footer{max-width:60rem;text-align:justify;padding:0 1rem}footer{width:100%;text-align:center;margin-top:2rem;border-top:.125rem solid #000;padding-top:1rem}
